{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'hello-world'",
            "program": "${workspaceFolder}/target/debug/hello-world.exe",
            "initCommands": [
                "platform select remote-linux", // Execute `platform list` for a list of available remote platform plugins.
                "platform connect connect://127.0.0.1:55015",
                "settings set target.inherit-env false", // See the note below.
            ]
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'hello-world'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=hello-world",
                    "--package=hello-world"
                ],
                "filter": {
                    "name": "hello-world",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}